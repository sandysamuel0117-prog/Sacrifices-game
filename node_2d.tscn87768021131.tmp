script/source = "extends CharacterBody2D

@export var speed := 200.0
@export var jump_force := -400.0
@export var gravity := 900.0

@export var max_health := 100
var health := 0

@export var health_decrease_interval := 30.0
@export var health_decrease_amount := 20
var _health_timer := 0.0

var health_bar: ProgressBar
var win_label: Label
var total_coins := 0  # 🟡 عدد الكوينز في بداية اللعبة

func _ready():
	if not is_in_group(\"Player\"):
		add_to_group(\"Player\")

	if has_node(\"HealthBar\"):
		health_bar = $HealthBar
		health_bar.max_value = max_health
		health_bar.value = health

	if has_node(\"WinLabel\"):
		win_label = $WinLabel
		win_label.visible = false

	# 🟡 نحسب عدد الكوينز الموجودين وقت بدء اللعبة
	total_coins = get_tree().get_nodes_in_group(\"Coins\").size()

func _physics_process(delta):
	if not is_on_floor():
		velocity.y += gravity * delta

	var input_direction = Input.get_axis(\"ui_left\", \"ui_right\")
	velocity.x = input_direction * speed

	if Input.is_action_just_pressed(\"ui_up\") and is_on_floor():
		velocity.y = jump_force

	move_and_slide()

	# ⏰ Health decreases over time
	_health_timer += delta
	if _health_timer >= health_decrease_interval:
		_health_timer = 0.0
		decrease_health(health_decrease_amount)

	_check_for_game_over()

func increase_health(amount):
	health = min(health + amount, max_health)
	if health_bar:
		health_bar.value = health

	if health >= max_health:
		print(\"🎉 You Win!\")
		if win_label:
			win_label.text = \"🎉 YOU WIN! 🎉\"
			win_label.visible = true

func decrease_health(amount):
	health = max(health - amount, 0)
	if health_bar:
		health_bar.value = health
	if health <= 0:
		_on_health_depleted()

func _on_health_depleted():
	print(\"Player health reached 0 - Game Over logic can go here\")

# 🧩 الجزء الجديد المعدل 👇👇👇
func _check_for_game_over():
	# لو لسه الكوينز متحسبتش، متعملش حاجة
	if total_coins == 0:
		return

	var remaining_coins = get_tree().get_nodes_in_group(\"Coins\").size()
	if remaining_coins == 0 and health < max_health:
		print(\"💀 Game Over!\")
		if win_label:
			win_label.text = \"💀 GAME OVER 💀\"
			win_label.visible = true
"

